    <script>
        // Page Navigation Functions
        function showLoginPage() {
            document.getElementById('login-page').classList.remove('hidden');
            document.getElementById('register-page').classList.add('hidden');
            document.getElementById('student-dashboard').classList.add('hidden');
            document.getElementById('admin-dashboard').classList.add('hidden');
        }
        
        function showRegisterPage() {
            document.getElementById('login-page').classList.add('hidden');
            document.getElementById('register-page').classList.remove('hidden');
            document.getElementById('student-dashboard').classList.add('hidden');
            document.getElementById('admin-dashboard').classList.add('hidden');
        }
        
        function showStudentDashboard() {
            document.getElementById('login-page').classList.add('hidden');
            document.getElementById('register-page').classList.add('hidden');
            document.getElementById('student-dashboard').classList.remove('hidden');
            document.getElementById('admin-dashboard').classList.add('hidden');
        }
        
        function showAdminDashboard() {
            document.getElementById('login-page').classList.add('hidden');
            document.getElementById('register-page').classList.add('hidden');
            document.getElementById('student-dashboard').classList.add('hidden');
            document.getElementById('admin-dashboard').classList.remove('hidden');
        }
        
        // Tab Navigation Functions
        function changeTab(tabId) {
            // Hide all tab contents
            var tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(function(tab) {
                tab.classList.remove('active');
            });
            
            // Remove active class from all buttons
            var tabButtons = document.querySelectorAll('.tab-button');
            tabButtons.forEach(function(button) {
                button.classList.remove('active');
            });
            
            // Show selected tab content and mark button as active
            document.getElementById(tabId).classList.add('active');
            event.currentTarget.classList.add('active');
        }
        
        function changeAdminTab(tabId) {
            // Hide all tab contents
            var tabContents = document.querySelectorAll('#admin-dashboard .tab-content');
            tabContents.forEach(function(tab) {
                tab.classList.remove('active');
            });
            
            // Remove active class from all buttons
            var tabButtons = document.querySelectorAll('#admin-dashboard .tab-button');
            tabButtons.forEach(function(button) {
                button.classList.remove('active');
            });
            
            // Show selected tab content and mark button as active
            document.getElementById(tabId).classList.add('active');
            event.currentTarget.classList.add('active');
        }
        
        // Authentication Functions
        function login() {
            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;
            var userType = document.getElementById('user-type').value;
            
            if (username && password) {
                if (userType === 'admin') {
                    // In a real system, this would validate against a database
                    if (username === 'admin' && password === '123') {
                        showAdminDashboard();
                    } else {
                        alert('Invalid admin credentials');
                    }
                } else {
                    // In a real system, this would validate against a database
                    if (username === 'lalheen' && password === '123') {
                        document.getElementById('student-name').textContent = 'John Smith';
                        showStudentDashboard();
                    } else {
                        alert('Invalid student credentials');
                    }
                }
            } else {
                alert('Please fill in all fields');
            }
        }
        
        function register() {
            var fullname = document.getElementById('reg-fullname').value;
            var studentId = document.getElementById('reg-student-id').value;
            var email = document.getElementById('reg-email').value;
            var username = document.getElementById('reg-username').value;
            var password = document.getElementById('reg-password').value;
            var confirmPassword = document.getElementById('reg-confirm-password').value;
            
            if (fullname && studentId && email && username && password && confirmPassword) {
                if (password === confirmPassword) {
                    // In a real system, this would save to a database
                    alert('Registration successful! Please login.');
                    showLoginPage();
                } else {
                    alert('Passwords do not match');
                }
            } else {
                alert('Please fill in all fields');
            }
        }
        
        function logout() {
            // Clear form fields
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
            
            showLoginPage();
        }
        
        // Admin Functions
        function saveAttendance() {
            // In a real system, this would save to a database
            alert('Attendance saved successfully!');
        }
        
        function generateReport() {
            var reportType = document.getElementById('report-type').value;
            var subject = document.getElementById('report-subject').value;
            
            // In a real system, this would query the database
            alert('Report generated for ' + reportType + ' on ' + subject);
        }
        
        function showAddStudentForm() {
            document.getElementById('add-student-form').classList.remove('hidden');
        }
        
        function hideAddStudentForm() {
            document.getElementById('add-student-form').classList.add('hidden');
        }
        
        function addStudent() {
            var fullname = document.getElementById('new-fullname').value;
            var studentId = document.getElementById('new-student-id').value;
            var email = document.getElementById('new-email').value;
            var username = document.getElementById('new-username').value;
            var password = document.getElementById('new-password').value;
            
            if (fullname && studentId && email && username && password) {
                // In a real system, this would save to a database
                alert('Student added successfully!');
                hideAddStudentForm();
            } else {
                alert('Please fill in all fields');
            }
        }
        
        function editStudent(studentId) {
            // In a real system, this would load student data from database
            alert('Editing student with ID: ' + studentId);
        }
        
        function deleteStudent(studentId) {
            // In a real system, this would remove from database
            if (confirm('Are you sure you want to delete student with ID: ' + studentId + '?')) {
                alert('Student deleted successfully!');
            }
        }
    </script>
</body>
